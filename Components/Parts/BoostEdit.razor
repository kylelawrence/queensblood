@rendermode InteractiveServer

<input title="boost edit" type="button" class="@classList" @onclick="HandleClick" />

<style>
    .boost-edit {
        background: transparent;
        border-radius: 5px;
    }

    .boost-edit.middle {
        background: white;
    }

    .boost-edit.boost {
        background: gold;
    }
</style>

@code {
    private string classList = "boost-edit";
    private bool isBoosted;

    [Parameter]
    public bool IsMiddle { get; set; }

    private void setClassList()
    {
        var middle = IsMiddle ? " middle" : "";
        var boost = isBoosted ? " boost" : "";
        classList = $"boost-edit{middle}{boost}";
    }

    private void HandleClick()
    {
        if (IsMiddle)
        {
            return;
        }
        isBoosted = !isBoosted;
        setClassList();
    }

    protected override void OnParametersSet()
    {
        setClassList();
    }
}