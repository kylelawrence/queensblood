@for (var i = 0; i < 5; i++)
{
    var index = i;
    var selectedClass = this.MaybeClass("selected", SelectedDeck == i);
    var onClick = () => OnDeckClicked(index);
    <button type="button" class="deck-select-button @selectedClass" @onclick="onClick">
    @(i + 1)
</button>
}

@code {
    [Parameter] public int SelectedDeck { get; set; }
    [Parameter] public Func<int, Task> OnDeckClicked { get; set; } = async (_) => await Task.CompletedTask;
}